<body>
  <div class="row">
    <p class='col-12'>Invoice #<%= @invoice.id %></p>
  </div>

  <div id="current-invoice-status">
    <strong>Status: </strong><%= @invoice.status %>
  </div>
  <br>

  <p> Created on: <%= @invoice.created_at.strftime("%A, %B %-d, %Y") %></p>
  <p id="total-revenue">Total Revenue: <%= number_to_currency(@invoice.total_revenue / 100) %></p>
  <p id="discounted-total-revenue">Discounted Total Revenue: <%= number_to_currency(@invoice.discounted_revenue / 100) %>

  <h4>Customer:</h4>
    <%= @customer.first_name %> <%= @customer.last_name %><br>
  <br>
  <br>
  <h4>Items on this Invoice:</h4>
  <table class="table">
    <thead>
      <tr class="tr">
        <th class="th1">Item Name</th>
        <th class="th1">Quantity</th>
        <th class="th1">Unit Price</th>
        <th class="th1">Status</th>
      </tr>
    </thead>

    <tbody>
      <% @invoice.invoice_items.each do |i| %>
        <section id="the-status-<%= i.id %>">
          <tr class="tr">
            <td style="text-align:center"><%= i.item.name %></td>
            <td style="text-align:center"><%= i.quantity %></td>
            <td style="text-align:center">$<%= i.unit_price %></td>
            <% if i.discount_applied != nil %>
              <td style="text-align:center" id="discount-<%= i.id %>"><%= link_to "#{i.discount_applied.id}", merchant_discount_path(@merchant, i.discount_applied) %></td>
            <% end %>
            <td style="text-align:center">
              <%= form_with model: @invoice, url: merchant_invoice_path(@merchant, @invoice), method: :patch, local: true do |f| %>
                <%= f.select :status, Invoice.statuses.keys, selected: "#{@invoice.status}" %>
                <%= f.submit 'Update Invoice' %>
              <% end %>
              </td>
          </tr>
        </section>
      <% end %>
    </tbody>
  </table>
</body>